<!DOCTYPE html>
<html>
<head>
  <title>QuoraUsingRails</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% unless session[:user_id].nil? %>
			<% @user=User.find_by_id(session[:user_id].to_i) %>
			<div id="header">
			<div id="header-quora-image">
				<a href="/"><img src="<%= image_url("quora.jpg") %>" id="img" ></a>	
			</div>
			<div id="search-section">
				<%= form_tag({controller: :home,action: :search},method: :get) do %>
				<%= text_field_tag(:search,nil,placeholder: 'Ask or Search Quora',id: 'search-bar')%><%= submit_tag('Ask Question',id: 'search-button') %>
				<% end %>
			</div>
			<div> 
				<a href="">Read</a> 
			</div>
			<div>
				<a href="">Answer</a>
			</div>
			<div>
				<a href="">Notification</a>
			</div>
			<div id="drop-down">
				<a href="" id="drop-down-button"><%= @user.name %></a>
				<div id="drop-down-menu-button">
					<div id="drop-down-menu-button">

					</div>	
				</div>
			</div>
			<div> <a href="/logout">Logout</a> </div>
		</div>
	<% end %>
<%= yield %>
</body>
</html>
